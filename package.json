{
  "name": "nextjs-setup",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "clean": "rimraf .next && rimraf coverage",
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "coverage": "jest --coverage && open coverage/lcov-report/index.html",
    "prettier:fix": "prettier --write .",
    "prettier": "prettier --check .",
    "prepare": "husky install"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "next": "12.2.5",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/node": "^18.7.16",
    "@types/react": "^18.0.18",
    "@types/react-dom": "^18.0.6",
    "autoprefixer": "^10.4.8",
    "commit-message-validator": "^1.0.2",
    "eslint": "8.23.0",
    "eslint-config-next": "12.2.5",
    "husky": "^8.0.0",
    "jest": "^29.0.1",
    "jest-environment-jsdom": "^29.0.1",
    "jest-mock-axios": "^4.6.1",
    "postcss": "^8.4.16",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "tailwindcss": "^3.1.8",
    "typescript": "^4.8.3"
  },
  "config": {
    "commit-message-validator": {
      "_comment": "Pattern can be Regex string or array of Regex string",
      "pattern": "^\\d{4}\\s\\|\\s[a-z|A-Z]+/?[a-z|A-Z]+\\s\\|\\s.+$",
      "errorMessage": "  \n\n❌  Your commit message is invalid. Please author your commit in the following pattern:\n\n✅  0000 | Pair1/Pair2 | Your awesome commit message.\n\n"
    }
  }
}
